<h1>What kind of news interests you?</h1>

<%= form_tag user_interests_path do %>
  <% if @current_user.user_interests.count < 1 %>
      <% 3.times do  %>
          <%= label_tag "Select Interest" %>
          <select name="user_interest[][interest_id]" > 
            <% Interest.all.each do |interest| %>
              <option value="<%= interest.id %>"> <%= interest.topic%> </option>
            <% end %>
          </select>
      <% end  %>
  <% else %>
        <%= label_tag "Select Interest" %>
        <select name="user_interest[][interest_id]" > 
          <% Interest.all.each do |interest| %>
            <option value="<%= interest.id %>"> <%= interest.topic%> </option>
          <% end %>
        </select>
  <% end %>
  <%= submit_tag %>
<% end %>

