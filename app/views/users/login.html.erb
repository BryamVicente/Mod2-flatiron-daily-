<h1>Hello, Please Login!</h1>

<% if flash[:my_errors]%>
    <br> <p style="color:red"><%= flash[:my_errors]%></p>
<% end %>

<%= form_tag "/login" do  %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in!" %>
<% end %>

