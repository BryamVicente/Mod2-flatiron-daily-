
<br>
<h2 style="text-align:center"> <%= @current_user.name %>'s Homepage </h2>

<br>

<h4 style="text-align:center"> Your Interests:
<% @current_user.interests.each do |interest| %>
    <strong><%= interest.topic %> |</strong>
<% end %>
</h4>


<table class="centered highlight" style="margin: 0 50px 100px 50px">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Published At</th>
            <th></th>
        </tr>
    </thead>
    <% @current_user.interested_topics.each do |article| %>
        <tbody>
                <td><%= article.category %></td>
                <td><%= link_to article.title, article.url, {:style=>'color:#000000;', :class => "css_class"} %></td>
                <td><% time = article.publishedAt = Time.new %>
                <%= time.strftime("%I:%M %p on %B %d") %> </td>
                <td><img style="max-width: 200px;"src="<%= article.urlToImage %>" alt="<%article.title%>" class="index-img"></td>
            </tr>
        </tbody>
    <% end %>
</table>
