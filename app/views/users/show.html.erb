<table class="centered highlight" style="margin: 0 50px 100px 50px">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Published At</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <% @current_user.interested_topics.each do |article| %>
        <tbody>
                <td><%= article.category %></td>
                <td style="color:#000000;"><%= link_to article.title, article.url, class: 'css_class', style: 'color:#000000', target: :_blank %> </td>
                <td><% time = article.publishedAt = Time.new %>
                <%= time.strftime("%I:%M %p on %B %d") %> </td>
                <td><img style="max-width: 200px;"src="<%= article.urlToImage %>" alt="<%article.title%>" class="index-img"></td>
                <td class="btn btn-default"> <%= button_to "Add to Favorites", "/favorites/?article_id=#{article.id}" %> </td>
            </tr>
        </tbody>
    <% end %>
</table>
